<section class="form-registro py-5">
    <div class="container gen d-flex flex-column align-items-center justify-content-center">
        <form action="POST" class="d-flex flex-column">
            <img src="/vendor/custom/images/rana_aventurera.png" width="120" class="img-fluid align-self-center">
            <div class="container">
                <h2 class="text-center">Registate gratis!</h2>
                <div class="inputs-cont form-row">
                    <div class="form-group">
                        <label for="inputNombre">Nombre Completo</label>
                        <input type="text" class="form-control" id="InputNombre" placeholder="Nombre" />
                    </div>
                    <div class="form-group">
                        <label for="inputEmail4">Correo</label>
                        <input type="email" class="form-control" id="inputCorreo" placeholder="example@example.com">
                    </div>
                    <div class="form-group">
                        <label for="inputContraseña">Telefono</label>
                        <input type="tel" class="form-control" id="inputTelefono" placeholder="+(12) 123-123-123" />
                    </div>
                    <div class="form-group">
                        <label for="radioHombre">Sexo</label>
                        <div class="row ml-1">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="radiosSexo" id="radioHombre"
                                    value="hombre" checked>
                                <label class="form-check-label" for="radioHombre">Hombre</label>
                            </div>
                            <div class="form-check ml-5">
                                <input class="form-check-input" type="radio" name="radiosSexo" id="radioMujer"
                                    value="mujer">
                                <label class="form-check-label" for="radioMujer">Mujer</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputContraseña">Fecha de Nacimiento</label>
                        <input type="date" class="form-control" id="inputaFecha" />
                    </div>
                    <div class="form-group">
                        <label for="inputContraseña">Contraseña</label>
                        <input type="password" class="form-control" id="InputContraseña" placeholder="Contraseña" />
                    </div>
                    <div class="form-group">
                        <label for="inputContraseña">Confirmar contraseña</label>
                        <input type="password" class="form-control" id="InputConfirmacion" placeholder="Contraseña" />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Registrar</button>
                </div>
            </div>
        </form>
        <div class="separador my-4"></div>
        <p class="inv">Ya tienes una cuenta? <a href="#">INGRESA AQUÍ</a></p>
    </div>
</section>

