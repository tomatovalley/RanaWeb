<section class="form-encuesta py-5">
    <div class="container gen d-flex flex-column align-items-center justify-content-center">
        <% include ./partials/messages %>
        <form action="encuesta" method="POST" class="wow fadeIn d-flex flex-column">
            <img src="/vendor/custom/images/rana_aventurera.png" width="120" class="img-fluid align-self-center">
            <div class="container">
                <h2 class="text-center">Busca tu Rana experiencia!</h2>
                <div class="inputs-cont form-row">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputTipoRana">Tipo de rana</label>
                        </div>
                        <select class="custom-select" name="tipoRana" id="inputTipoRana">
                            <option value="rana fresa">Rana Fresa</option>
                            <option value="rana hipster">Rana Hipster</option>
                            <option value="rana aventurera">Rana Aventurera</option>
                        </select>
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputTipoRana">Tipo destino</label>
                        </div>
                        <select class="custom-select" name="tipoDestino" id="inputTipoRana">
                            <option value="ciudad">Ciudad</option>
                            <option value="playa">Playa</option>
                            <option value="bosque">Bosque</option>
                            <option value="pueblo magico">Pueblo mágico</option>
                            <option value="lugar cultural">Lugar cultural</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="inputFechaEstimada">Fecha que planeas viajar</label>
                        <input type="date" name="fechaEstimada" class="form-control" id="inputFechaEstimada"
                            value="<%= typeof fechaEstimada != 'undefined' ? fechaEstimada : '' %>" />
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputTransporte">Transporte preferido</label>
                        </div>
                        <select class="custom-select" name="transporte" id="inputTransporte">
                            <option value="camion">Camión</option>
                            <option value="tren">Tren</option>
                            <option value="avion">Avión</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Viaja!</button>
                </div>
            </div>
        </form>
    </div>
</section>

